/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16],inc, load, reset;
    OUT out[16];
    
    PARTS:
        Inc16 (in=outp, out=outpIn);
        Mux16 (a=outp, b=outpIn, sel=inc, out=outpInc);
        Mux16 (a=outpInc, b=in, sel=load, out=outLoad);
        Mux16 (a=outLoad, b=false, sel=reset, out=outRes);
        Register (in=outRes, load=true, out=out, out=outp);
}